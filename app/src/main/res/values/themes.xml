<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyOpinion" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/clubHouse</item>
        <item name="colorPrimaryVariant">@color/clubHouse</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="statusBarBackground">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/clubHouse</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/clubHouse</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_layout_style</item>
    </style>

    <style name="roundedImage" parent="">
        <item name="cornerRadius">5dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="LabelStyle">
        <item name="background">@drawable/background_label</item>
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>